<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_widget_day_week"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/activity_create_widget_day_week_wall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/nav_head_day"
            tools:ignore="contentDescription" />

        <FrameLayout
            android:layout_centerInParent="true"
            android:layout_width="300dp"
            android:layout_height="192dp">

            <include layout="@layout/widget_day_week" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:alpha="0.2"
            android:background="@android:color/black">

            <TextView
                android:text="@string/feedback_use_local_as_example"
                android:textColor="@android:color/white"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/normal_margin"
                style="@style/content_text"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/activity_create_widget_day_week_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/activity_create_widget_day_week_chooseLocationTitle"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/feedback_choose_location"
                        style="@style/content_text" />

                    <Spinner
                        android:id="@+id/activity_create_widget_day_week_spinner"
                        style="@style/spinner"
                        tools:ignore="RtlHardcoded"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/normal_margin"
                        android:layout_toRightOf="@+id/activity_create_widget_day_week_chooseLocationTitle" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/activity_create_widget_day_week_showCardTitle"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/feedback_show_widget_card"
                        style="@style/content_text" />

                    <Switch
                        android:id="@+id/activity_create_widget_day_week_showCardSwitch"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/normal_margin"
                        style="@style/my_switch"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/activity_create_widget_day_week_hideRefreshTimeTitle"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/feedback_hide_refresh_time"
                        style="@style/content_text" />

                    <Switch
                        android:id="@+id/activity_create_widget_day_week_hideRefreshTimeSwitch"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/normal_margin"
                        style="@style/my_switch"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/activity_create_widget_day_week_blackTextTitle"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/normal_margin"
                        android:text="@string/feedback_black_text"
                        style="@style/content_text" />

                    <Switch
                        android:id="@+id/activity_create_widget_day_week_blackTextSwitch"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/normal_margin"
                        style="@style/my_switch"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/activity_create_widget_day_week_doneButton"
                        android:layout_margin="@dimen/normal_margin"
                        android:layout_alignParentRight="true"
                        android:text="@string/done"
                        android:textColor="?attr/colorAccent"
                        style="@style/material_button"
                        tools:ignore="RtlHardcoded" />

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>