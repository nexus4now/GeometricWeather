<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_details_aqi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/container_details_aqi_icon"
        android:src="@drawable/ic_aqi"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        style="@style/material_icon"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <TextView
        android:id="@+id/container_details_aqi_title"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/container_details_aqi_icon"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginRight="@dimen/normal_margin"
        android:textSize="@dimen/title_text_size"
        style="@style/content_text"
        tools:text="污染指数-良"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/container_details_aqi_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/container_details_aqi_icon"
        android:layout_below="@id/container_details_aqi_title"
        android:layout_marginTop="2dp"
        android:layout_marginRight="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:textColor="@color/colorTextGrey"
        style="@style/content_text"
        tools:text="气象条件有利于空气污染物稀释、扩散和清除，可在室外正常活动。"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>