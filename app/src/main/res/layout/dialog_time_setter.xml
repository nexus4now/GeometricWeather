<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TimePicker
        android:id="@+id/dialog_time_setter_time_picker"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_time_setter_done"
            style="@style/material_button"
            android:text="@string/done"
            android:textColor="@color/colorAccent"
            android:layout_alignParentRight="true"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/dialog_time_setter_cancel"
            style="@style/material_button"
            android:text="@string/cancel"
            android:textColor="@color/colorTextDark2nd"
            android:layout_toLeftOf="@id/dialog_time_setter_done"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

</LinearLayout>